{
  "compilerOptions": {
    "baseUrl": "src",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "inlineSourceMap": false,
    "module": "es2015",
    "target": "es5",
    "experimentalDecorators": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es6",
      "es2017",
      "dom"
    ],
    "paths": {
      "tslib": [
        "node_modules/tslib/tslib.d.ts"
      ],
      "jgb-store": [
        "../../types"
      ]
    }
  }
}